<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BandHomeActivity">

    <TextView
        android:id="@+id/tv_band_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="24dp"
        android:textAlignment="center"
        android:textSize="34sp" />

    <Button
        android:id="@+id/button_band_add_venue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_band_home"
        android:layout_marginTop="30dp"
        android:text="@string/ChooseAvailableEvent" />


    <Button
        android:id="@+id/button_band_show_my_venues"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_band_add_venue"
        android:layout_marginTop="30dp"
        android:text="@string/ShowMyVenues" />


    <ListView
        android:id="@+id/lv_band_eventList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/button_band_show_my_venues" />

</RelativeLayout>